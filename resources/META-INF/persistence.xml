<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
  <persistence-unit name="tankilegacy.server">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>tankilegacy.server.client.User</class>
    <class>tankilegacy.server.client.UserEquipment</class>
    <class>tankilegacy.server.garage.ServerGarageUserItem</class>
    <class>tankilegacy.server.garage.ServerGarageUserItemWithModification</class>
    <class>tankilegacy.server.garage.ServerGarageUserItemWeapon</class>
    <class>tankilegacy.server.garage.ServerGarageUserItemHull</class>
    <class>tankilegacy.server.garage.ServerGarageUserItemPaint</class>
    <class>tankilegacy.server.garage.ServerGarageUserItemResistance</class>
    <class>tankilegacy.server.garage.ServerGarageUserItemSupply</class>
    <class>tankilegacy.server.garage.ServerGarageUserItemSubscription</class>
    <class>tankilegacy.server.quests.ServerDailyQuest</class>
    <class>tankilegacy.server.quests.ServerDailyQuestReward</class>
    <class>tankilegacy.server.quests.EarnScoreQuest</class>
    <class>tankilegacy.server.quests.EarnScoreOnMapQuest</class>
    <class>tankilegacy.server.quests.EarnScoreInModeQuest</class>
    <class>tankilegacy.server.quests.JoinBattleMapQuest</class>
    <class>tankilegacy.server.quests.KillEnemyQuest</class>
    <class>tankilegacy.server.quests.DeliverFlagQuest</class>
    <class>tankilegacy.server.quests.CapturePointQuest</class>
    <class>tankilegacy.server.quests.TakeBonusQuest</class>
    <class>tankilegacy.server.invite.Invite</class>

    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />
      <property name="hibernate.use_sql_comments" value="true" />
      <property name="hibernate.hbm2ddl.auto" value="update" />
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1/tankilegacy"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="hibernate.c3p0.min_size" value="5"/>
      <property name="hibernate.c3p0.max_size" value="20"/>
      <property name="hibernate.c3p0.timeout" value="300"/>
    </properties>
  </persistence-unit>
</persistence>
